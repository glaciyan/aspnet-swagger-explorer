{
    "name": "asp-net-swagger-viewer",
    "displayName": "ASP.NET Swagger Viewer",
    "description": "View and call endpoints from ASP.NET Swagger",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:swagger",
        "onCommand:aspswagview.setSwaggerJsonUrl",
        "onView:aspswagview.refreshEndpoints"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "aspswagview.setSwaggerJsonUrl",
                "title": "Set Swagger Json Url",
                "icon": "$(json)"
            },
            {
                "command": "aspswagview.refreshEndpoints",
                "title": "Refresh",
                "icon": "$(refresh)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "aspswagview.refreshEndpoints",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "endpoint-explorer",
                    "title": "ASP.NET Endpoints",
                    "icon": "$(window)"
                }
            ]
        },
        "views": {
            "endpoint-explorer": [
                {
                    "id": "swagger",
                    "name": "Swagger"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "got": "^11.8.2"
    }
}
